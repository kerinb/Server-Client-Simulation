;
;

        AREA FlowControl, CODE, READONLY
        IMPORT main
        EXPORT start
        
start 
        LDR R0, =0xA0000026; 1010 0000 0000 0000 0000 0000 0000 0010 0110
        LDR R1, =0; USED TO STORE THE REVERSED NUMBER 
        LDR R2, =0; USED TO ITERATE THOUGH LOOP AND IS COMPARED TO SENTINAL
        LDR R3, =0; USED TO STORE R0 SHIFTED TO THE LEFT
        LDR R4, =0; USED TO STORE THE VALUES FROM THE CARRY FLAG - CONDITION CODE FLAG 
        
while
        MOVS R3, R0, LSL #1; R3 = R0 << 1, THE PROCESSOR CODE FLAG MAY CHANGE HERE FROM 0 -1
        ADC R4, R4, #0; CARRY FLAG VALUE 1 STORED IF CARRY FALG IS SET
        ORR R1, R1, R4, LSL R2; R1 = R1 OR (R4 << R2)
        
        ADD R2, R2, #1; R2 = R2+1 - USED TO COMPARE TO SENTINAL 32
        MOV R4, #0; RESET R4 - CARRY FLAG
        MOV R0, R3; UPDATE THE ORIGINAL NUM WITH THE BIT SHIFTED VALUE
        
        CMP R2, #32; COMPARE R2 < 32 -> ITERATE LOOP ELSE END
        BLT while
        
        MOV R0, R1; STORE REVERSED NUMBER IN INITAL REGISTER R0
        
stop B stop
        END
